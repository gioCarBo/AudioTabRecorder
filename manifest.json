{
  "manifest_version": 3,
  "name": "Audio Recorder Pro",
  "version": "1.0",
  "description": "Records browser tab audio and optionally microphone.",
  "permissions": [
    "tabCapture",  
    "offscreen",   
    "storage"      
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
